{
  "name": "ai-promote",
  "private": true,
  "version": "1.0.0",
  "description": "AI Promote - Monorepo with Next.js frontend and Fastify backend",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "test": "npm run test --workspace=frontend && npm run test --workspace=backend",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "type-check": "npm run type-check --workspace=frontend && npm run type-check --workspace=backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "mcp:dev": "npm run dev --workspace=mcp-server",
    "mcp:build": "npm run build --workspace=mcp-server",
    "mcp:start": "npm run start --workspace=mcp-server",
    "mcp:type-check": "npm run type-check --workspace=mcp-server",
    "mcp:install": "npm install --workspace=mcp-server"
  },
  "workspaces": [
    "frontend",
    "backend",
    "shared",
    "mcp-server"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@modelcontextprotocol/server-filesystem": "^2025.7.29",
    "zod": "^3.23.8",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "fastify",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "MIT"
}
