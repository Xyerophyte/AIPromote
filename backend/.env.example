# AI Strategy Generation Engine - Environment Variables

# ============================================
# AI PROVIDER APIS
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/aipromotdb

# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT Secret Key (Use a strong, random key in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Token Expiration Times
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SERVER CONFIGURATION
# ============================================

# Node Environment
NODE_ENV=development

# Server Port
PORT=3001

# Server Host
HOST=0.0.0.0

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# OPTIONAL CONFIGURATIONS
# ============================================

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# AI Provider Timeouts (in milliseconds)
AI_PROVIDER_TIMEOUT=30000

# Content Safety Configuration
BRAND_SAFETY_ENABLED=true
AUTO_APPROVE_THRESHOLD=0.9

# Performance Settings
CONCURRENT_AI_REQUESTS=5
CACHE_TTL=3600

# Monitoring and Analytics
ENABLE_ANALYTICS=true
LOG_AI_REQUESTS=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,txt,doc,docx

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable detailed logging in development
DEBUG=ai-strategy:*

# Database Logging
LOG_DATABASE_QUERIES=true

# AI Provider Mock Mode (for testing)
MOCK_AI_PROVIDERS=false

# ============================================
# PRODUCTION ONLY
# ============================================

# Security Settings
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Error Reporting
ERROR_REPORTING_ENABLED=false
SENTRY_DSN=

# ============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================

# AWS S3 for file storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Email Service (for notifications)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# Analytics Integration
ANALYTICS_API_KEY=
ANALYTICS_PROJECT_ID=

# Social Media APIs
# Twitter/X API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Security
ENCRYPTION_KEY=your-32-char-secret-encryption-key
WEBHOOK_SECRET=your-webhook-secret-key

# URLs
BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# ============================================
# STRIPE BILLING CONFIGURATION
# ============================================

# Stripe API Keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Product IDs (set these up in Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_starter_monthly
STRIPE_GROWTH_PRICE_ID=price_growth_monthly
STRIPE_SCALE_PRICE_ID=price_scale_monthly

# Trial Period (in days)
TRIAL_PERIOD_DAYS=14

# Billing Configuration
BILLING_PORTAL_RETURN_URL=http://localhost:3000/billing
CHECKOUT_SUCCESS_URL=http://localhost:3000/billing/success
CHECKOUT_CANCEL_URL=http://localhost:3000/billing/cancel

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable specific features
ENABLE_STRATEGY_GENERATION=true
ENABLE_TONE_ANALYSIS=true
ENABLE_CONTENT_PILLARS=true
ENABLE_AUDIENCE_ANALYSIS=true
ENABLE_BRAND_SAFETY=true
ENABLE_STRATEGY_COMPARISON=true

# AI Provider Selection
PREFERRED_AI_PROVIDER=openai
FALLBACK_AI_PROVIDER=anthropic

# Content Safety Settings
STRICT_CONTENT_FILTERING=true
LEGAL_COMPLIANCE_CHECK=true
BRAND_ALIGNMENT_CHECK=true

# Performance Features
ENABLE_CACHING=true
ENABLE_REQUEST_BATCHING=true
ENABLE_BACKGROUND_PROCESSING=true
